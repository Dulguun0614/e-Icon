<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorMain">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/back_button"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital"
        android:textSize="40dp"
        android:paddingLeft="50dp"
        android:paddingTop="30dp"
        android:id="@+id/App_Title_2"
        android:layout_below="@+id/back_button"
        android:layout_alignParentStart="true" android:layout_centerHorizontal="">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U-School"
        android:layout_below="@id/App_Title_2"
        android:paddingLeft="150dp"
        android:textSize="20dp"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textSize="30dp"
        android:paddingTop="40dp"
        android:id="@+id/Create_acc"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="20dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/Create_acc"
        android:layout_alignEnd="@+id/App_Title_2" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Login"
        android:id="@+id/editText"
        android:layout_below="@+id/Create_acc"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="31dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name"
        android:textSize="20dp"

        android:id="@+id/textView3"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Login"
        android:id="@+id/Line_2"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        /><EditText
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:textSize="@dimen/Login"
    android:id="@+id/Line_2"
    android:layout_below="@+id/textView3"
    android:layout_alignStart="@+id/textView3"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:layout_below="@id/Line_2"
        android:paddingLeft="40dp"
        android:textSize="20dp"
        android:id="@+id/Position"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Login"
        android:id="@+id/Line_3"
        android:paddingLeft="100dp"
        android:layout_below="@+id/Position"
        android:layout_alignStart="@+id/Line_2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class"
        android:textSize="20dp"
        android:layout_below="@id/Line_3"
        android:paddingLeft="40dp"
        android:id="@+id/Class"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Login"
        android:id="@+id/Line_4"
        android:paddingLeft="100dp"
        android:layout_below="@+id/Class"
        android:layout_alignStart="@+id/Line_2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Line_4"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:background="@drawable/rounded_button"/>


</RelativeLayout>